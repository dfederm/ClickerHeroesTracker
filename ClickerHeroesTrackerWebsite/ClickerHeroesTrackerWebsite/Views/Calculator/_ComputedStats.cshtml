@using ClickerHeroesTrackerWebsite.Models;
@using ClickerHeroesTrackerWebsite.Models.Calculator;

@model ComputedStatsViewModel

<h4>Computed Stats:</h4>
<p class="text-muted">
    Based on the <a href="http://s3-us-west-2.amazonaws.com/clickerheroes/ancientssoul.html" target="_blank">calculator</a> by /u/rler.
</p>

@if (Model.UserSettings.PlayStyle != PlayStyle.Idle)
{
    <p class="text-danger">
        Currently these stats are computed only for Idle play style. The numbers may be incorrect for other play styles.
    </p>
}

<table class="table">
    <tr>
        <td>Souls/hr</td>
        <td>@Model.SoulsPerHour</td>
    </tr>
    <tr>
        <td>Optimal Level</td>
        <td>@Model.OptimalLevel</td>
    </tr>
    <tr>
        <td>Souls per Ascension (at Optimal Level)</td>
        <td>@Model.OptimalSoulsPerAscension</td>
    </tr>
    <tr>
        <td>Optimal Ascension Time</td>
        <td>@Model.OptimalAscensionTime min</td>
    </tr>
</table>