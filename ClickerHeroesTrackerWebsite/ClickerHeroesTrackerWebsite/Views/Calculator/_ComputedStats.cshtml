    <tr>
        <td>Transcendent Power</td>
        <td data-type="@StatType.TranscendentPower.ToString().ToCamelCase()">0</td>
    </tr>
    <tr>
        <td>Max Transcendent Primal Reward</td>
        <td data-type="@StatType.MaxTranscendentPrimalReward.ToString().ToCamelCase()">0</td>
    </tr>
    <tr>
        <td>Transcendent Primal Cap Zone</td>
        <td data-type="@StatType.BossLevelToTranscendentPrimalCap.ToString().ToCamelCase()">0</td>
    </tr>
    <tr>
        <td>Titan Damage</td>
        <td data-type="@StatType.TitanDamage.ToString().ToCamelCase()">0</td>
    </tr>
    <tr>
        <td>Highest Zone</td>
