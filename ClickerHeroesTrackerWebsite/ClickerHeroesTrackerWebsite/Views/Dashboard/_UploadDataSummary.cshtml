@model ClickerHeroesTrackerWebsite.Models.Dashboard.UploadDataSummary

<h4>Recent Uploads:</h4>
<table class="table">
    <tr>
        <th>
            Upload Time
            <a href="/Manage" class="text-muted" data-toggle="tooltip" data-placement="right" title="Times not displayed in your time zone? You can adjust your time zone on the settings page.">(?)</a>
        </th>
        <th></th>
    </tr>
    @foreach (var upload in Model.Uploads)
    {
        <tr>
            <td>@TimeZoneInfo.ConvertTime(upload.UploadTime, TimeZoneInfo.Utc, Model.UserSettings.TimeZone).ToString("G")</td>
            <td class="text-right">@Html.ActionLink("View", "View", "Calculator", new { uploadId = upload.UploadId }, null)</td>
        </tr>
    }
</table>